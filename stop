#!/usr/bin/env sh
set -e
projectRoot="$(a="/$0"; a=${a%/*}; a=${a:-.}; a=${a#/}/; cd "$a/.." || return; pwd)"

show_help() {
  echo "
    Usage: path/to/ffc/pay/services [OPTION...]
    Stop services.

    Options:
      -h, --help       display this help text
    "
}

while :; do
  case $1 in
    -h|--help)   # Call a "show_help" function to display a synopsis, then exit.
      show_help
      exit
      ;;
    *)
      break
  esac

  shift
done

cd "${projectRoot}"
cd ./ffc-sfd-landing-page && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-sfd-auth && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-sfd-proxy && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-sfd-data && \
  docker-compose down $@
cd "${projectRoot}"
cd ./ffc-sfd-ahwp-stub && \
  docker-compose down $@
